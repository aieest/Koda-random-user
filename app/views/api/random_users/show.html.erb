<%#= @random_user %>
<div class="resume">
  <h1>Random User</h1>

  <div class="section">
    <div class="form-group">
      <label for="first_name">First Name</label>
      <%= text_field_tag :first_name, @random_user['results'][0]['name']['first'] %>
    </div>
    <div class="form-group">
      <label for="last_name">Last Name</label>
      <%= text_field_tag :last_name, @random_user['results'][0]['name']['last'] %>
    </div>
  </div>

  <div class="section">
    <div class="form-group">
      <label for="username">Username</label>
      <%= text_field_tag :username, @random_user['results'][0]['login']['username'] %>
    </div>
  </div>

  <div class="section">
    <div class="form-group">
      <label for="email">Email</label>
      <%= email_field_tag :email, @random_user['results'][0]['email'] %>
    </div>
  </div>

  <div class="section">
    <h2>Gender</h2>
    <div class="radio-group">
      <label for="male">Male</label>
      <%= radio_button_tag :gender, 'male', @random_user['results'][0]['gender'] == 'male' %>
      <label for="female">Female</label>
      <%= radio_button_tag :gender, 'female', @random_user['results'][0]['gender'] == 'female' %>
      <label for="other">Other</label>
      <%= radio_button_tag :gender, 'other', @random_user['results'][0]['gender'] == 'other' %>
    </div>
  </div>

  <div class="section">
    <div class="form-group">
      <label for="address">Address</label>
      <%= text_area_tag :address, "#{@random_user['results'][0]['location']['street']['number']} #{@random_user['results'][0]['location']['street']['name']}, #{@random_user['results'][0]['location']['city']}, #{@random_user['results'][0]['location']['state']}, #{@random_user['results'][0]['location']['country']} #{@random_user['results'][0]['location']['postcode']}", rows: 4 %>
    </div>
  </div>

  <div class="section">
    <h2>ID Picture</h2>
    <%= image_tag @random_user['results'][0]['picture']['large'], alt: "ID Picture" %>
  </div>
</div>